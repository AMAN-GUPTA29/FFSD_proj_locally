        <div class="container my-5 hidden frm">
            <div class="container-fluid flx my-4">
                <h2>Add New Service</h2>
                <button class="btn btn-outline-dark flx-right" onclick="toggle_form()">Go Back</button>
            </div>

            <form action="/seller/addService" method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Title</label>
                    <input name="title" type="text" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" required>
                    <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
                </div>
                <label for="dropdown" class="form-label">Title</label>
                <select id="dropdown" class="form-select mb-3" aria-label="Default select example" name="tag">
                    <!-- <option selected>Open this select menu</option> -->
                    <option value="Electric" name="tech">Electric</option>
                    <option value="Auto-Rickshaw" name="nontech">Auto-Rickshaw</option>

                    <option value="Auto-Rickshaw" name="nontech">Auto-Rickshaw</option>
                </select>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Charge</label>
                    <input name="charge" type="number" class="form-control" id="exampleInputPassword1" min="0">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Description</label>
                    <textarea name="description" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" rows="5" required></textarea>
                    <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>



