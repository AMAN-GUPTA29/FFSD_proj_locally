    <%- include('navbar') %>

    <div class="container">
        <h1 class="text-center">All Your Past Transactions</h1>

        <table class="table  table-striped table-hover table-bordered border">
            <thead class="table-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Past Transactions</th>
                <th scope="col">ID</th>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Rupees(&#8377;)</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
                <% for(let i = 0; i < transactions.length; i++) { %>
                    <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td> <%= transactions[i].name %> </td>
                        <td>@ <%= transactions[i].id %> </td>
                        <td> <%= transactions[i].date %> </td>
                        <td> <%= transactions[i].time %> </td>
                        <td>&#8377; <%= transactions[i].money %> </td>
                    </tr>
                <% } %>
            </tbody>
          </table>
    </div>

