    <script>
        let name = document.getElementById('special-name');
        let address = document.getElementById('special-address');
        let pincode = document.getElementById('special-pincode');

        let xhr = new XMLHttpRequest();

        xhr.onreadystatechange = () => {
            if (xhr.readyState == 4 && xhr.status == 200) {
                let data = JSON.parse(xhr.response);
                console.log(data)
